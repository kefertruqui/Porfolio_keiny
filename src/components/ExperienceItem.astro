---
interface Props {
  title: string;
  company:string;
  description: string;
  date: string;
  link?: string;
}
const { title, description, company, date, link } = Astro.props;
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-72px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-1 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-purple-900 -left-[74px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <h3 class="text-xl font-bold text-purple-800">{title}</h3>
      <h4 class="font-semibold text-sm text-purple-700 dark:text-white">{company}</h4>
      <time class="p-0 m-0 text-sm dark:text-white text-black">{date}</time>
    </div>
  </div>
  <div class="relative flex flex-col gap-1 pb-4 text-black dark:text-gray-300 md:col-span-3">
    {description}
